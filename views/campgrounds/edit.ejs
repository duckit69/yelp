<% layout("layouts/boilerplate") %>
    <div class="row mt-3">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form class="validated-form" action="/campgrounds/<%= campground._id %>?_method=PATCH" method="POST"
                enctype="multipart/form-data" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="title">Edit Title:</label>
                    <input class="form-control" type="text" id="title" name="campground[title]"
                        value="<%= campground.title %>" required>
                    <div class="valid-feedback">
                        Looks good
                    </div>
                    <div class="invalid-feedback">
                        Please enter a Title
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Edit Location:</label>
                    <input class="form-control" type="text" id="location" name="campground[location]"
                        value="<%= campground.location %>" required>
                    <div class="valid-feedback">
                        Looks good
                    </div>
                    <div class="invalid-feedback">
                        Please enter a Location
                    </div>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">Description</span>
                    <textarea class="form-control" aria-label="With textarea" name="campground[description]"
                        required><%= campground.location %></textarea>
                    <div class="valid-feedback">
                        Looks good
                    </div>
                    <div class="invalid-feedback">
                        Please enter a Description
                    </div>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">$</span>
                    <input value="<%= campground.price %>" type="Number" class="form-control" name="campground[price]"
                        required>
                    <span class="input-group-text">
                        <%= campground.price %>
                    </span>
                    <div class="valid-feedback">
                        Looks good
                    </div>
                    <div class="invalid-feedback">
                        Please enter a Price
                    </div>
                </div>
                <div class="mb-3">
                    <% campground.images.forEach((img, i)=> {%>
                        <img src="<%= img.thumbnail %>" alt="" class="img-thumbnail">
                        <label for="image_<%=i%>">Delete?</label>
                        <input type="checkbox" id="image_<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        <% }) %>
                            <div class="mb-3">
                                <input class="form-control" type="file" id="formFileMultiple" name="images" multiple>
                            </div>
                </div>
                <div class="mb-3"><button class="btn btn-info">Update Campground</button></div>

            </form>
            <a class="btn btn-primary mb-3" href=" /campgrounds/<%=campground._id %>">Back to Campground</a>
        </div>
    </div>